[flake8]
max-line-length = 127

max-complexity = 10

ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503

# Exclude some directories
exclude =
    .git,
    __pycache__,
    build,
    dist
    .venv

select =
    B301,
    B302,
    B303

filename =
    *.py,
    *.pyx
